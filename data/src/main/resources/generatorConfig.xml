<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!--<properties resource="jdbc.properties"></properties>-->
    <classPathEntry
            location="/Users/lee/work/project/autocar/data/src/main/java"/>
    <context id="tab"
             targetRuntime="MyBatis3">
        <commentGenerator>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/test_car?autoReconnect=true&amp;allowMultiQueries=true"
                        userId="root"
                        password="lee0806"/>
        <javaModelGenerator
                targetPackage="com.leren.entity.mybatis"
                targetProject="src/main/java"/>
        <sqlMapGenerator
                targetPackage="com.leren.mapper"
                targetProject="src/main/java"/>
        <javaClientGenerator
                targetPackage="com.leren.mapper"
                targetProject="src/main/java"
                type="XMLMAPPER"/>
        <table
                schema="shop"
                tableName="shop"
                domainObjectName="Shop"
                enableSelectByPrimaryKey="true"
                enableSelectByExample="false"
                enableDeleteByExample="false"
                enableCountByExample="false"
                enableUpdateByExample="false"
        >
            <!--true 生成的实体列名会跟数据库的一致;false 会生成驼峰结构(默认值)-->
            <property name="useActualColumnNames" value="false"/>
            <!--主键生成策略 自增(使用uuid作为主键时,请注意生成策略)-->
            <generatedKey column="id" sqlStatement="mysql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>